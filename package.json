{
  "name": "montagsbild",
  "version": "0.0.1",
  "private": true,
  "devDependencies": {
    "autoprefixer": "^9.4.10",
    "chokidar-cli": "^1.2.0",
    "glob": "^7.1.2",
    "gray-matter": "^4.0.1",
    "js-yaml": "^3.10.0",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^6.1.2",
    "prop-types": "^15.6.0",
    "react-scripts": "2.1.8",
    "sharp": "latest",
    "sitemap-static": "^0.4.2",
    "snazzy": "latest",
    "standard": "latest",
    "sw-precache": "^5.2.0",
    "tailwindcss": "^0.7.4"
  },
  "dependencies": {
    "@researchgate/react-intersection-observer": "^0.7.0",
    "core-js": "^2.5.3",
    "date-fns": "^1.29.0",
    "dom-form-serializer": "^1.0.7",
    "exif-js": "^2.3.0",
    "intersection-observer": "^0.5.0",
    "lodash": "^4.17.10",
    "moveto": "^1.7.1",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-feather": "^1.1.0",
    "react-helmet": "^5.1.3",
    "react-markdown": "3",
    "react-router-dom": "^4.1.1",
    "react-snapshot": "^1.1.0"
  },
  "scripts": {
    "start": "npm-run-all prepare-content -p start:content tailwind:css start:app",
    "start:app": "react-scripts start",
    "start:content": "chokidar 'content/**/**' -c 'npm run prepare-content'",
    "watch:css": "postcss src/styles/index.css -o src/index.css -w",
    "build": "npm-run-all -s prepare-content tailwind:css build:app build:react-snapshot build:sitemap build:sw build:sha",
    "build:app": "react-scripts build",
    "build:react-snapshot": "react-snapshot",
    "build:sw": "sw-precache --config='sw-precache-config.js'",
    "build:sitemap": "node ./functions/generate-sitemap.js",
    "build:sha": "git rev-parse HEAD > build/sha",
    "build:css": "postcss src/styles/index.css -o src/index.css",
    "tailwind:css": "tailwind build src/css/tailwind.src.css -c tailwind.config.js -o src/css/tailwind.css",
    "parse-content": "node ./functions/parse-content.js",
    "resize-images": "node ./functions/resize-images.js",
    "prepare-content": "npm-run-all -s parse-content resize-images",
    "test": "standard | snazzy && react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "reactSnapshot": {
    "include": [
      "/404"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "eslintConfig": {
    "extends": "react-app"
  }
}
